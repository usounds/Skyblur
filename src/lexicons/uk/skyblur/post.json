{
	"lexicon": 1,
	"id": "uk.skyblur.post",
	"defs": {
		"main": {
			"type": "record",
			"description": "Record containing a Skyblur post.",
			"key": "tid",
			"record": {
				"type": "object",
				"required": ["text", "createdAt", "uri"],
				"properties": {
					"text": {
						"type": "string",
						"maxLength": 3000,
						"maxGraphemes": 300,
						"description": "The post main contents."
					},
					"additional": {
						"type": "string",
						"maxLength": 100000,
						"maxGraphemes": 10000,
						"description": "The post additional contents."
					},
					"uri": { "type": "string", "format": "at-uri" },
					"createdAt": {
						"type": "string",
						"format": "datetime",
						"description": "Created date assigen by client"
					}
				}
			}
		}
	}
}